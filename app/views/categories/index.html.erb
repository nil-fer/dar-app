<p id="notice"><%= notice %></p>

<h1>Категории</h1>

<table>
  <thead>
    <tr>
      <%= link_to 'Новая категория', new_category_path %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.title, category %></td>

        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Удалить', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
