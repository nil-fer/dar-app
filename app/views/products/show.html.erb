<% if @product.product_pic.present? %>
  <%= image_tag @product.product_pic.url %>
<% end %>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category %>
</p>

<p>
  <strong>Weight type:</strong>
  <%= number_to_human(@product.weight_quantity, units: {unit: "г", thousand: "кг"}) %>
</p>


<p>
  <strong>Price:</strong>
  <%= number_to_currency(@product.price, unit: "₽", separator: ",", delimiter: "", format: "%n %u") %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', request.referer %>
