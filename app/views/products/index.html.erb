<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Weight type</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Sale price</th>
      <th>Company name</th>
      <th>Batch</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td class="product-pic"><%= image_tag product.product_pic.url %></td>
        <td><%= link_to product.name, product %></td>
        <td><%= product.category %></td>
        <td><%= number_to_human(product.weight_quantity, units: {unit: "г", thousand: "кг"}) %></td>
        <td><%#= product.weight_quantity %></td>
        <td><%= product.weight_type %></td>
        <td><%= number_to_currency(product.price, unit: "₽", separator: ",", delimiter: "", format: "%n %u") %></td>
        <td><%= link_to product.user.company_name, users_profile_url %></td>

        <% if can? :update, Product %>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <% end %>

        <% if can? :destroy, Product %>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

